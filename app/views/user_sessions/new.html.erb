<h1>Login, please</h1>

<%= form_for @user_session do |f| %>
    <% if @user_session.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this client from being saved:</h2>

          <ul>
            <% @user_session.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
    <div class="form-group">
      <%= f.label :remember_me %>
      <%= f.check_box :remember_me %>
    </div>
  <p><%= f.submit "Войти" %></p>
<% end %>


